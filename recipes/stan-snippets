(stan-snippets
 :fetcher git
 ;; The locally modified version of `package-recipe-lookup'
 ;; can handle a path relative to `local-melpa'.
 ;; The :url should be the overall stan-mode git repo directory.
 ;; The :files should be specified relative to the repo.
 :url ".."
 :files ("stan-snippets/stan-snippets.el"
	 ("snippets/stan-mode" "stan-snippets/snippets/stan-mode/*")
         (:exclude "stan-snippets/test-*.el")))
